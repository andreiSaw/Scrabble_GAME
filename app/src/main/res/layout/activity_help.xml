<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="activity_pack.HelpActivity">

    <TextView
        android:id="@+id/textviewver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="Times New Roman"
        android:text="@string/StringForInfoTab"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textSize="27sp"/>

    <ImageButton
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewver"
        android:layout_margin="5dp"
        android:background="@mipmap/gt"
        android:onClick="githubOnCLickListner"
        />

    <ImageButton
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewver"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/imageView1"
        android:background="@mipmap/tg"
        android:onClick="telegramOnCLickListner"
        />

    <ImageButton
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewver"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/imageView2"
        android:background="@mipmap/ig"
        android:onClick="instagramOnCLickListner"/>

    <ImageButton
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textviewver"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/imageView3"
        android:background="@mipmap/hse"
        android:onClick="hseOnCLickListner"/>

</RelativeLayout>
