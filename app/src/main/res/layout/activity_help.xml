<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.activity_pack.HelpActivity">

        <Button
            android:id="@+id/button1point"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorLightBlueTile"
            android:fontFamily="sans-serif-light"
            android:text="@string/StringFor1Point"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/button2points"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button1point"
            android:layout_margin="5dp"
            android:background="@color/colorLightGreenTile"
            android:fontFamily="sans-serif-light"
            android:text="@string/StringFor2Points"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/button3points"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button2points"
            android:layout_margin="5dp"
            android:background="@color/colorLightPinkTile"
            android:fontFamily="sans-serif-light"
            android:text="@string/StringFor3Points"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/buttonMiddleHelp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button3points"
            android:layout_margin="5dp"
            android:background="@color/colorForMiddle"
            android:fontFamily="sans-serif-light"
            android:text="@string/StringForMiddleHelp"
            android:textStyle="bold"
            />
    </RelativeLayout>
</ScrollView>
